<div class="admins-index">
  <div class="container main-container">
    <h3 class="main-title"><%= t '.title' %></h3>
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th><%= Admin.human_attribute_name(:name) %></th>
          <th><%= Admin.human_attribute_name(:admin) %></th>
          <th><%= Admin.human_attribute_name(:email) %></th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @admins.each do |admin| %>
        <% if admin.id.present? %>
        <tr>
          <td class="admin-name"><%= admin.name %></td>
          <td>
            <% if admin.admin == "true" %><%= t '.has_authority' %>
            <% end %>
          </td>
          <td class="admin-name"><%= admin.email %></td>
          <td class="text-right">
            <% unless admin == current_admin %>
            <%= link_to admin.admin_i18n, admin_toggle_admin_path(admin), method: :patch, data: { confirm: "#{t 'attributes.remove_authority_confirmation'}" }, class: "btn btn-outline-info btn-sm" %>
            <% end %>
            <%= link_to "#{t 'attributes.destroy'}", admin_path(admin), method: :delete, data: { confirm: "#{t 'attributes.destroy_confirmation'}" }, class: "btn btn-outline-info btn-sm" %>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
