<%= render partial: 'layouts/headers/beforeSignInAdminHeader' %>
<%= render partial: 'layouts/bgAnimation' %>

<div class="admins-passwords-new">
  <h1><%= t '.title' %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group">
    <br />
    <%= f.label :email, "#{t '.description'}", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
  </div>

  <div class="actions text-right">
    <%= f.submit "#{t '.send'}", class: "btn btn-login btn-sm" %>
  </div>
  <% end %>
</div>
