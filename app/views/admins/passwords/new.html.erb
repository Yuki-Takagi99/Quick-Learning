<%= render partial: 'layouts/headers/adminHeader' %>
<%= render partial: 'layouts/bgAnimation' %>

<div class="admins-sessions-new">
  <h1>Forgot your password?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control" %>
  </div>

  <%= f.submit "Send me reset password instructions", class: "btn btn-info btn-sm" %>
  <% end %>
</div>
