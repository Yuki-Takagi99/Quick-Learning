<%= render partial: 'shared/bg_animation' %>
<%= stylesheet_link_tag "admins/sessions/new", :media => "all" %>

<div class="container">
  <div class="session-title animated bounceInDown delay-1s">
    <h2 ">Sign up/Admin user</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="form-group">
    <%= f.text_field :name, placeholder: "name", autofocus: true, class: "form-control animated bounceInDown faster" %>
  </div>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "form-control animated bounceInDown faster"%>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "form-control animated bounceInDown fast" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password(confirmation)", class: "form-control animated bounceInDown fast" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-info btn-sm animated rollIn delay-2s' %>
  </div>
  <% end %>

  <div class="session-link text-right animated lightSpeedIn slow">
    <%= link_to 'Sign in', new_admin_session_path %>
  </div>


</div>
