<div class="answer_papers-check">
  <div class="container main-container">
    <h3 class="main-title"><%= @test.title %></h3>
    <% @answer_papers.each_with_index do |answer_paper, n|%>
    <% if answer_paper.title.present? %>
    <div class="test-question-title">
      <h5><%= t '.test_question' %><%= n+1 %>.ã€€<%= answer_paper.title %></h5>
    </div>
    <% end %>
    <div class="test-question-content">
      <%= simple_format(h(answer_paper.content), {}, sanitize: false, wrapper_tag: "div") %>
    </div>
    <div class="test-question-content">
      <p class="text-advice"><%= t '.answer' %></p>
      <%= simple_format(h(answer_paper.answer), {}, sanitize: false, wrapper_tag: "div") %>
    </div>
    <div class="test-question-content">
      <p class="text-advice"><%= t '.current_answer' %></p>
      <%= simple_format(h(answer_paper.correct_answer), {}, sanitize: false, wrapper_tag: "div") %>
    </div>
    <div id="advice<%= answer_paper.id %>_area" class="test-question-content">
      <%= render partial: 'answer_papers/advice', locals: { answer_paper: answer_paper } %>
    </div>
    <% end %>
    <%= link_to @answer_papers.last.checked_i18n, answer_paper_toggle_checked_path(@answer_papers.last, test: @test), method: :patch, class: "btn btn-info btn-block btn-sm checked-toggle-btn" %>
  </div>
</div>
