<div class="tests-entry">
  <div class="container main-container">
    <h3 class="main-title"><%= @test_title %></h3>
    <%= form_with model: @answer_papers, url: answer_paper_path, method: :put, local: true do |form| %>
    <% @specific_answer_papers.each_with_index do |answer_paper, n|%>
    <%= fields_for 'answer_papers[]', answer_paper do |field| %>
    <% if answer_paper.title.present? %>
    <div class="test-question-title">
      <h5>問題<%= n+1 %>.　<%= answer_paper.title %></h5>
    </div>
    <% end %>
    <div class="test-question-content">
      <%= simple_format(h(answer_paper.content), {}, sanitize: false, wrapper_tag: "div") %>
    </div>
    <div class="test-question-content">
      <%= simple_format(h(answer_paper.correct_answer), {}, sanitize: false, wrapper_tag: "div") %>
    </div>
    <div class="test-question-content">
      <%= simple_format(h(answer_paper.answer), {}, sanitize: false, wrapper_tag: "div") %>
    </div>
    <div class="test-question-content">
      <%= simple_format(h(answer_paper.description), {}, sanitize: false, wrapper_tag: "div") %>
    </div>
    <div class="form-group form-answer">
      <%= field.text_area :memo, class: "form-control" %>
    </div>
    <% end %>
    <% end %>
    <div class="action">
      <%= form.submit nil, class: 'btn btn-info btn-block' %>
    </div>
    <% end %>
  </div>
</div>
