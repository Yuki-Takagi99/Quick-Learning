<div class="main-wrap">
  <div class="main">
    <h3><%= t "devise.invitations.edit.header" %></h3>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "name" %>
      </div>

      <% if f.object.class.require_password_on_accepting %>
      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, placeholder: "password", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "form-control" %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-outline-info btn-sm mt-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
