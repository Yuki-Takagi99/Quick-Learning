<div class="devise-invitations-new">
  <div class="container main-container">
    <% if request.path.include?("admin") %>
    <h3 class="main-title"><%= t "devise.invitations.new.admin_header" %></h3>
    <% else %>
    <h3 class="main-title"><%= t "devise.invitations.new.user_header" %></h3>
    <% end %>
    <div class="form">
      <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-group">
        <%= f.hidden_field :name %>
      </div>
      <% resource.class.invite_key_fields.each do |field| -%>
      <div class="form-group">
        <%= f.text_field field, placeholder: "メールアドレス", class: "form-control" %>
      </div>
      <% end -%>
      <div class="actions">
        <div class="text-right">
          <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-info btn-block btn-sm" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
