<div class="devise-invitations-new">
  <div class="container">
    <div class="main-wrap">
      <div class="main">
        <h3><%= t "devise.invitations.new.header" %></h3>
        <div class="form">

          <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>

          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "name" %>
          </div>

          <% resource.class.invite_key_fields.each do |field| -%>
          <div class="form-group">
            <%= f.text_field field, placeholder: "email", class: "form-control" %>
          </div>
          <% end -%>

          <div class="actions">
            <div class="text-right">
              <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-outline-info btn-sm" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
