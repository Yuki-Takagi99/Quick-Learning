<%= form_with(model: [subject, part], local: true) do |form| %>

<div class="form-group">
  <%= form.text_field :title, placeholder: "新しいタイトル", class: "form-control" %>
</div>

<div class="field">
  <%= form.text_area :content, 'data-provider': :summernote %>
</div>

<div class="actions">
  <%= form.submit nil, class: 'btn btn-info btn-block' %>
</div>

<div id="summernote"></div>
<% end %>

<script>
  $(function () {
    $('[data-provider="summernote"]').each(function(){
      $(this).summernote({
        lang: 'ja-JP',
        height: 500,
        tooltip: false,
        fontNames: ['Helvetica', 'sans-serif', 'Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
        fontNamesIgnoreCheck: ['Helvetica', 'sans-serif', 'Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
      });
    })
  })
</script>
