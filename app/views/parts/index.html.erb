<h1>Parts</h1>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
    <% if part.id.present? %>
      <tr>
        <td><%= part.title %></td>
        <td><%= part.content %></td>
        <td><%= part.status %></td>
        <td><%= link_to 'Show', project_subject_parts_path(part) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
