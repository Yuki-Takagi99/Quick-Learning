<div class="parts-show">
  <div class="container main-container">
        <h3 class="main-title"><%= @part.subject.title %></h3>
        <% if user_signed_in? %>
        <h4 class="text-right"><%= link_to @part.status_i18n, toggle_status_part_path(@part), method: :patch, class: "btn btn-outline-info btn-sm part-status mr-2 #{@part.status}" %><%= link_to "質問する", new_part_question_path(@part), class: 'btn btn-outline-info btn-sm part-question' %></h4>
        <% end %>
          <table class="table table-responsive">
            <thead class="thead-default">
              <tr>
                <th class="part-title"><%= @part.title %></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= @part.content.html_safe %></td>
              </tr>
            </tbody>
          </table>
    <% if admin_signed_in? %>
    <div class="action text-right">
      <%= link_to 'Edit', edit_part_path(@part), class: 'btn btn-info btn-block' %>
    </div>
    <% end %>
    <% if user_signed_in? %>
    <h4 class="action text-right"><%= link_to @part.status_i18n, toggle_status_part_path(@part), method: :patch, class: "btn btn-outline-info btn-sm part-status mr-2 #{@part.status}" %><%= link_to "質問する", new_part_question_path(@part), class: 'btn btn-outline-info btn-sm part-question' %></h4>
    <% end %>
  </div>
</div>
