<h1>Projects</h1>

<div class="container">
  <%= render 'form', project: @project %>
</div>


<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project_admins_path(project_id: project.id), method: :post %></td>
        <td><%= link_to 'Title Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
