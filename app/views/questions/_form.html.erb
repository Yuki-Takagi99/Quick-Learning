  <ul>
    <% @question.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= form.text_field :title, placeholder: "質問のタイトル", class: "form-control" %>
</div>

<div class="form-group">
  <%= form.text_area :content, placeholder: "質問の内容", rows: 10, class: "form-control" %>
</div>

<div class="action text-right">
  <%= form.submit nil, class: 'btn btn-info btn-block' %>
</div>
<% end %>
