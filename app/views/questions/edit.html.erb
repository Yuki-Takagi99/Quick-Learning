<div class="questions-edit">
  <%= form_with(model: @question, local: true) do |form| %>
  <div class="container main-container">
    <h3 class="main-title"><%= t '.title' %></h3>
    <div class="form">

      <div class="form-group">
        <%= form.text_field :title, placeholder: "title", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.text_area :content, placeholder: "content", rows: 10, class: "form-control" %>
      </div>

    </div>
  </div>
  <div class="action text-right">
    <%= form.submit nil, class: 'btn btn-info btn-block' %>
  </div>
  <% end %>
</div>
