<div class="questions-index">
  <div class="container main-container">
    <h3 class="main-title">Question Index</h3>
    <div class="form">
      <%= search_form_for @search do |f| %>
      <div class="form-group row">
        <%= f.search_field :title_cont, placeholder: "search question", class: "form-control col-9" %><%= f.submit 'search', class: "btn btn-info col-2 ml-1" %>
      </div>
      <% end %>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th class="sort-link"><%= sort_link(@search, :created_at) %><%= sort_link(@search, :reply, false, default_order: :asc) %></th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
        <tr>
          <% if user_signed_in? %>
          <th><%= link_to question.title, question_path(question), class: "question-title" %></th>
          <% elsif question.checked_by_admin == false %>
          <th><%= link_to question.title, question_path(question), class: "unchecked-question-title" %></th>
          <% elsif question.reply == false %>
          <th><%= link_to question.title, question_path(question), class: "unreplied-question-title" %></th>
          <% else %>
          <th><%= link_to question.title, question_path(question), class: "question-title" %></th>
          <% end %>
        </tr>
        <tr>
          <td>更新：<%= question.updated_at.to_s(:datetime_jp) %></td>
        </tr>
        <tr>
          <td>質問者：<%= question.user.name %></td>
        </tr>
        <% if question.checker.present? %>
        <tr>
          <td>確認者：<%= question.checker %></td>
        </tr>
        <% end %>
        <tr>
          <td>part：<%= question.part.title %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
