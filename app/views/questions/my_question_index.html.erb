<div class="questions-my_question_index">
  <div class=container>
    <div class="main-wrap">
      <div class="main">
        <h3 class="page-title">My Questions</h3>
        <div class="form">
          <%= search_form_for @search, url: self_questions_path do |f| %>
          <div class="form-group row">
            <%= f.search_field :title_cont, placeholder: "search question", class: "form-control col-9" %><%= f.submit 'search', class: "btn btn-info btn-sm col-2 ml-1" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <% @questions.each do |question| %>
    <div class="user-question">
      <div class="main-table">
        <ul class="list-group list-group-flush">
          <li class="list-group-item question-title">title：<%= question.title %></li>
          <li class="list-group-item question-title">part：<%= question.part.title %></li>
          <li class="list-group-item"><%= simple_format(h(question.content), {}, sanitize: false, wrapper_tag: "div") %></li>
        </ul>
      </div>
    </div>
    <div class="question-action text-right">
    <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-outline-info btn-sm' %>
    <%= link_to 'Destroy', question_path(question), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm" %>
    </div>
    <% end %>
  </div>
</div>
