<div class="questions-new">
  <div class=container>
    <div class="main-wrap">
      <div class="main">
        <h3>New Question</h3>
        <div class="form">
          <%= form_with(model: [@part, @question], local: true) do |form| %>
          <div class="form-group">
            <%= form.text_field :title, placeholder: "title", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= form.text_area :content, placeholder: "content", rows: 10, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="question-action text-right">
      <%= form.submit nil, class: 'btn btn-outline-info btn-sm' %>
    </div>
  </div>
</div>
<% end %>
