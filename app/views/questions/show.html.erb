<div class="questions-show">
  <div class=container>
    <div class="main-wrap">
      <div class="main">
        <h3>Question</h3>
        <div class="main-table">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><h3><%= @question.title %></h3></li>
            <li class="list-group-item">質問者：<%= @question.user.name %></li>
            <li class="list-group-item"><%= @question.content %></li>
          </ul>
          <div class="text-right">
            <% if user_signed_in? %>
            <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-outline-info btn-sm' %>
            <%= link_to 'Destroy', question_path(@question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-info btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div id="comments-area">
      <%= render partial: 'comments/index', locals: { question: @question, comments: @comments } %>
    </div>
    <div id="comments-form">
      <%= render partial: 'comments/form', locals: { comment: @comment, question: @question } %>
    </div>
  </div>
</div>
