<div class="questions-show">
  <div class="container main-container">
    <ul class="list-group list-group-flush">
      <li class="list-group-item list-title">質問内容：<%= @question.title %></li>
      <li class="list-group-item list-questioner">質問者：<%= @question.user.name %></li>
      <% if @question.checker.present? %>
        <li class="list-group-item list-questioner">確認者：<%= @question.checker %></li>
      <% end %>
      <li class="list-group-item"><%= simple_format(h(@question.content), {}, sanitize: false, wrapper_tag: "div") %></li>
    </ul>
  </div>
  <% if user_signed_in? %>
  <div class="action text-right">
    <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-outline-info btn-sm' %>
  </div>
  <% end %>
  <div id="comments-area">
    <%= render partial: 'comments/index', locals: { question: @question, comments: @comments } %>
  </div>
  <div id="comments-form">
    <%= render partial: 'comments/form', locals: { comment: @comment, question: @question } %>
  </div>
  <% if user_signed_in? && !@question.solved? %>
  <div class="action text-right">
    <%= link_to 'この質問を解決済みにする', question_path(@question, params: { question: { solved: true} }), :method => :put, class: 'btn btn-outline-info btn-sm' %>
  </div>
  <% end %>
</div>
