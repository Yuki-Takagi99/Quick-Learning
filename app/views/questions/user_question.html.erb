<div class="questions-user_questions">
  <div class=container>
    <div class="main-wrap">
      <div class="main">
        <h3>My Questions</h3>
        <div class="main-table">
          <table class="table">
            <tbody>
              <% @questions.each do |question| %>
              <tr class="table-title-bg">
                <td><%= link_to question.title, project_subject_part_question_path(question.project_id, question.subject_id, question.part_id, question), class: "question-title" %></td>
                <td></td>
                <tr>
                  <td><%= question.content %></td>
                  <td class="text-right"><%= link_to 'Edit', edit_project_subject_part_question_path(question.project_id, question.subject_id, question.part_id, question), class: "btn btn-outline-info btn-sm" %><%= link_to 'Destroy', project_subject_part_question_path(question.project_id, question.subject_id, question.part_id, question), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
