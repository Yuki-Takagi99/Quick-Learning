<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% subjects.each do |subject| %>
      <% if subject.id.present? %>
        <tr>
          <td><%= link_to subject.title, subject_path(subject), class: "subject-title" %></td>
          <td class="text-right"><%= link_to 'Edit', edit_subject_path(subject), class: "btn btn-outline-info btn-sm" %>
          <%= link_to 'Destroy', subject_path(subject), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
