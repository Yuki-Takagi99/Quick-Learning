<div class="subjects-show">
  <div class=container>
    <div class="main-wrap">
      <div class="main">
        <h3>Subject Show</h3>
        <%= link_to "new part", new_subject_part_path(@subject), class: "btn btn-outline-info btn-sm" %>
        <div class="main-table">
          <table class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th>Title</th>
                <th colspan="1"></th>
              </tr>
            </thead>
            <tbody>
              <% @parts.each do |part| %>
              <% if part.id.present? %>
              <tr>
                <td><%= link_to part.title, part_path(part), class: "part-title" %></td>
                <td class="text-right"><%= link_to 'Edit', edit_part_path(part), class: "btn btn-outline-info btn-sm" %>
                  <%= link_to 'Destroy', part_path(part), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm" %></td>
                </tr>
                <% end %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
