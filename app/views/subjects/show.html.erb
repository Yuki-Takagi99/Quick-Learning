<div class="subjects-show">
  <div class="container main-container">
    <h3 class="main-title">Subject Show</h3>
    <table class="table table-hover">
      <tbody>
        <tr>
          <th><%= @subject.title %></th>
          <th class="text-right"><%= link_to "", new_subject_part_path(@subject), class: "far fa-plus-square fa-lg new-part-icon" %></th>
        </tr>
        <% @parts.each do |part| %>
        <% if part.id.present? %>
        <tr>
          <td><%= link_to part.title, part_path(part), class: "part-title" %></td>
          <td class="text-right"><%= link_to 'Edit', edit_part_path(part), class: "btn btn-outline-info btn-sm" %>
            <%= link_to 'Destroy', part_path(part), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-info btn-sm" %>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
