<div class="tests-index">
  <div class="container main-container">
    <h3 class="main-title">Test Index</h3>
    <div class="form">
      <%= render partial:'tests/form', locals: { test: @test, project: @project } %>
    </div>
    <% if Test.where(active: 1).present? %>
    <div class="text-right">
      <%= link_to "テストを配布する", new_testing_path, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm mb-2" %>
    </div>
    <% end %>
    <%= render partial: 'tests/index' %>
  </div>
</div>
