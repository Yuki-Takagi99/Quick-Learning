<div class="tests-show">
  <div class="container main-container">
    <h3 class="main-title"><%= @test.title %></h3>
    <table class="table table-borderless table-responsive">
      <% @test_questions.each do |test_question| %>
      <thead class="thead-default">
        <% if test_question.title.present? %>
        <tr>
          <th class="test_question-title"><%= test_question.title %></th>
        </tr>
        <% end %>
      </thead>
      <tbody>
        <tr><td><%= test_question.content %></td></tr>
        <tr><td>
          <%= form_with(model: test_question, local: true) do |form| %>
          <div class="form-group">
            <%= form.text_area :content, placeholder: "input content", rows: test_question.form_size, class: "form-control mt-1" %>
          </div>
          <% end %>
        </td></tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
<%= link_to "", new_test_test_question_path(@test), class: "far fa-plus-square fa-lg new-part-icon" %>
