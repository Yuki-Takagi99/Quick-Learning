<%= render partial: 'layouts/headers/beforeSignInUserHeader' %>
<%= render partial: 'layouts/bgAnimation' %>

<div class="users-sessions-new">
  <h1><%= t '.title' %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <br />
    <%= f.password_field :password, autofocus: true, placeholder: "新しいパスワード", autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワード(確認)", class: "form-control" %>
  </div>

  <div class="actions text-right">
    <%= f.submit "#{t '.change'}", class: "btn btn-login btn-sm" %>
  </div>
  <% end %>
</div>
