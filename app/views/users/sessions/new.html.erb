<%= render partial: 'layouts/headers/userSignInHeader' %>
<%= render partial: 'layouts/bgAnimation' %>

<div class="users-sessions-new">
  <h1>Sign in</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <br />
    <%= f.email_field :email, autocomplete: "email", placeholder: "email", class: "form-control"%>
  </div>

  <div class="form-group">
    <br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in", class: 'btn btn-info btn-sm' %>
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: 'btn btn-info btn-sm' %>
  </div>
  <% end %>
</div>
